<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/itemsList"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/selectButton"
        android:layout_marginBottom="8dp"
        android:layout_height="100dp">

    </ListView>

    <Button
        android:text="@android:string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acceptButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:text="@android:string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButton"
        app:layout_constraintRight_toLeftOf="@+id/acceptButton"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/acceptButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:text="@string/deselectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deselectButton"
        app:layout_constraintBaseline_toBaselineOf="@+id/selectButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintRight_toLeftOf="@+id/selectButton"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:text="@android:string/selectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectButton"
        app:layout_constraintBottom_toTopOf="@+id/cancelButton"
        android:layout_marginBottom="16dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>