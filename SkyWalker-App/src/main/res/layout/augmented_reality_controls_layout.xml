<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <LinearLayout
        android:id="@+id/debug_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/theta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theta"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/xRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x = 300"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/yRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="y = 200"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/zRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="z = 100"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/navigation_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:elevation="16dp"
        android:orientation="vertical"
        android:paddingTop="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/server_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />

            <TextView
                android:id="@+id/real_server_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="https://www.xtremeloc.rdnest.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/background_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/filter_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/filter_icon"
                    android:backgroundTint="@color/cardview_light_background"
                    android:backgroundTintMode="src_in" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/filter_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Inverse" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/logout_icon"
                    android:backgroundTint="@color/cardview_light_background"
                    android:backgroundTintMode="src_in" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:minLines="1"
                    android:text="@string/disconnect_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Inverse" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/background_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <Switch
                android:id="@+id/switch_debug_info"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:checked="true"
                android:text="Hide debug info"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/compilationStamp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>